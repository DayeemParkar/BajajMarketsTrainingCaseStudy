{
    "openapi": "3.0.0",
    "info": {
        "description": "API for utilizing case study application functionality",
        "version": "1.0",
        "title": "Bank Case Study API",
        "license": {
            "name": "CC0 1.0 Universal",
            "url": "https://creativecommons.org/publicdomain/zero/1.0/"
        }
    },

    "tags": [
        {
            "name": "Test API",
            "description": "Check authentication"
        }
    ],

    "servers": [
        {
            "url": "/"
        }
    ],

    "components": {
        "schemas": {
            "RetrieveToken": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "TokenResult": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    },
                    "success": {
                        "type": "boolean"
                    }
                }
            },
            "VerifyToken": {
                "type" : "string",
                "properties" : {
                    "apikey" : {
                        "type" : "string"
                    }
                }
            },
            "Success": {
                "type" : "object",
                "properties" : {
                    "message" : {
                        "type" : "string"
                    }
                }
            }
        }
    },

    "paths": {
        "/api/retrievetoken": {
            "post": {
                "tags": [
                    "Retrieve token API"
                ],
                "summary": "Retrieve token",
                "requestBody": {
                    "description": "Enter credentials to retrieve token",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RetrieveToken"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema" : {
                            "$ref": "#/components/schemas/TokenResult"
                        }
                    },
                    "400": {
                        "description": "BAD REQUEST",
                        "schema" : {
                            "$ref": "#/components/schemas/TokenResult"
                        }
                    },
                    "500": {
                        "description": "SERVER ERROR",
                        "schema" : {
                            "$ref": "#/components/schemas/TokenResult"
                        }
                    }
                }
            }
        },
        "/api/verifytoken": {
            "get": {
                "tags": [
                    "Verify token API"
                ],
                "summary": "Verify token",
                "parameters": [
                    {
                        "name": "apikey",
                        "in": "header",
                        "description": "Authentication token",
                        "required": true,
                        "type": "string",
                        "schema" : {
                            "$ref": "#/components/schemas/VerifyToken"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema" : {
                            "$ref": "#/components/schemas/Success"
                        }
                    },
                    "401": {
                        "description": "UNAUTHORIZED",
                        "schema" : {
                            "$ref": "#/components/schemas/Success"
                        }
                    },
                    "404": {
                        "description": "NOT FOUND",
                        "schema" : {
                            "$ref": "#/components/schemas/Success"
                        }
                    },
                    "500": {
                        "description": "SERVER ERROR",
                        "schema" : {
                            "$ref": "#/components/schemas/Success"
                        }
                    }
                }
            }
        }
    }
}